#1/ QC raw reads
bash fastqc_raw_reads.sh ---> qsub fastqc_raw_reads.qsub 

#2/ Trimming & QC trimmed reads
bash trimming_trimmomatic_PE.sh ---> qsub trimming_trimmomatic_PE.qsub

#3/ Transcriptome assembly
qsub assembly_trinity_PE_norm_10samples_011017.qsub

#4/ ORF prediction
qsub predict_orf.qsub

grep ">" longest_orfs.cds | cut -f3 -d ":" > longest_orfs.cds_transcripts_names

python getFasta.py /scratch/externe/ifremer/pauffret/pinctada_transcriptome_assembly/results/assembly_trinity_norm_10samples_011017/Trinity.fasta longest_orfs.cds_transcripts_names Trinity.fasta_brut_011017.predict_orf_m100_corresponding_transcripts

#5/ Abundance estimation
bash estimate_abundance_per_sample.sh

qsub create_abundances_matrix.qsub

#6/ Filtering
qsub filter_low_expression.qsub

#7/ Optional : clustering
qsub cluster_sequences_cdhit.qsub 

#8/ Remapping samples
bash remap_assembly_trinity_PE_norm_10samples.sh

#9/ Filterinf bam files
bash filterbam.sh

#10/ Screening for contamination
qsub blast_screen_conta.qsub
